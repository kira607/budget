<TransactionEditor>:
    orientation: "vertical"

    name_input: name_input_id
    from_button: from_button_id

    MDToolbar:
        title: "Edit transaction"
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1
        left_action_items: [["arrow-left", lambda x: app.close_editor()]]
        right_action_items: [["check", lambda x: app.close_editor(True)]]

    MDBoxLayout:
        orientation: "vertical"
        padding: [20, 20, 20, 20]

        MDTextField:
            id: name_input_id
            hint_text: 'Name'

        MDFlatButton:
            id: from_button_id
            text: 'From'
            on_release: app.pick_from()