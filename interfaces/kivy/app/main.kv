<TransactionListItem>:
    orientation: 'vertical'
    BoxLayout:
        MDLabel:
            text: 'Name'
        MDLabel:
            text: 'Comment'
        MDLabel:
            text: 'planned'
    BoxLayout:
        MDLabel:
            text: 'from'
        BoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: 'value'
            MDLabel:
                text: 'plan value'
        MDLabel:
            text: 'to'
    BoxLayout:
        MDLabel:
            text: 'plan date'
        MDLabel:
            text: 'fact date'
        MDLabel:
            text: 'tag'

<Root>:
    orientation: 'vertical'

    transactions_list: transactions_list
    button: fetch_button

    MDRectangleFlatButton:
        id: fetch_button
        text: 'show transactions'
        on_release:
            root.show()

    ScrollView:
        MDList:
            id: transactions_list
