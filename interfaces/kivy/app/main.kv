<TransactionListItem>:
    radius: 7
    elevation: 30

    name: name
    comment: comment
    planned: planned
    from_: from_
    value: value
    plan_value: plan_value
    to: to
    plan_date: plan_date
    fact_date: fact_date
    tag: tag

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        BoxLayout:
            MDLabel:
                id: name
                text: 'Name'
            MDLabel:
                id: comment
                theme_text_color: "Secondary"
                text: 'Comment'
            MDLabel:
                id: planned
                theme_text_color: "Hint"
                text: 'planned'
        BoxLayout:
            MDLabel:
                id: from_
                text: 'from'
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    id: value
                    text: 'value'
                    theme_text_color: "Custom"
                    text_color: 0, 1, 0, 1
                MDLabel:
                    id: plan_value
                    text: 'plan value'
                    theme_text_color: "Hint"
            MDLabel:
                id: to
                text: 'to'
        BoxLayout:
            MDLabel:
                id: plan_date
                text: 'plan date'
            MDLabel:
                id: fact_date
                text: 'fact date'
            MDLabel:
                id: tag
                text: 'tag'

<Root>:
    orientation: 'vertical'

    transactions_list: transactions_list
    button: fetch_button

    MDRectangleFlatButton:
        id: fetch_button
        text: 'show transactions'
        on_release:
            root.show()

    ScrollView:
        MDList:
            id: transactions_list

            TransactionListItem:

            TransactionListItem:
