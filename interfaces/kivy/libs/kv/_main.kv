<TransactionListItem>:
    name: name_id
    comment: comment_id
    planned: planned_id
    from_: from_id
    value: value_id
    planned_value: planned_value_id
    to: to_id
    plan_date: plan_date_id
    pay_date: pay_date_id
    tag: tag_id

    BoxLayout:
        orientation: 'vertical'
        padding: 10
        BoxLayout:
            MDLabel:
                id: name_id
                text: 'Name'
                font_style: "H5"
            MDLabel:
                id: comment_id
                theme_text_color: "Secondary"
                text: 'Comment'
            MDLabel:
                id: planned_id
                theme_text_color: "Hint"
                text: 'planned'
        BoxLayout:
            MDLabel:
                id: from_id
                text: 'from'
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    id: value_id
                    text: 'value'
                    theme_text_color: "Custom"
                    text_color: 0, 1, 0, 1
                MDLabel:
                    id: planned_value_id
                    text: 'planned value'
                    theme_text_color: "Hint"
            MDLabel:
                id: to_id
                text: 'to'
        BoxLayout:
            MDLabel:
                id: plan_date_id
                text: 'plan date'
            MDLabel:
                id: pay_date_id
                text: 'pay_date'
            MDLabel:
                id: tag_id
                text: 'tag'

<TransactionsList@RecycleView>:
    viewclass: 'TransactionListItem'

    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<AccountListItem>:

    ## IDS ##
    name: name_id
    value: value_id

    MDLabel:
        id: name_id
        text: 'name'
    MDLabel:
        id: value_id
        text: 'current_value'


<AccountsList@RecycleView>:
    viewclass: 'AccountListItem'

    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<Root>:
    orientation: 'vertical'

    ## IDS ##
    transactions_list: transactions_list_id
    accounts_list: accounts_list_id

    MDBottomNavigation:

        MDBottomNavigationItem:
            name: "screen: plan"
            text: 'plan'
            icon: 'calendar-month-outline'


        MDBottomNavigationItem:
            name: 'screen: history'
            text: 'history'
            icon: 'format-list-numbered'

            TransactionsList:
                id: transactions_list_id

        MDBottomNavigationItem:
            name: 'screen: home'
            text: 'home'
            icon: 'home'

        MDBottomNavigationItem:
            name: 'screen: analysis'
            text: 'analysis'
            icon: 'chart-line'

        MDBottomNavigationItem:
            name: 'screen: accounts'
            text: 'accounts'
            icon: 'view-grid-outline'

            AccountsList:
                id: accounts_list_id